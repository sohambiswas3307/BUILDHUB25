<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.buildhub.javafx.LoginController" style="-fx-background-color: linear-gradient(to bottom, #E0E7FF 0%, #C7D2FE 100%);">
    <children>
        <!-- Header with Back Button -->
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 20;">
            <Button text="â† Back" onAction="#onBack" style="-fx-background-color: transparent; -fx-text-fill: #1E1B4B; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;"/>
        </HBox>
        
        <!-- Main Card - Centered and responsive -->
        <VBox alignment="CENTER" spacing="30" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 10); -fx-max-width: 500; -fx-pref-width: 500; -fx-max-height: 600; -fx-pref-height: 600;" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="50" left="50" right="50" top="50"/>
            </padding>
            
            <!-- Header -->
            <VBox alignment="CENTER" spacing="10">
                <Text text="ðŸ—ï¸" style="-fx-font-size: 48px;"/>
                <Text text="BuildHub" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #1E1B4B;"/>
                <Text text="Welcome Back!" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #1E1B4B;"/>
                <Text text="Sign in to your account" style="-fx-font-size: 14px; -fx-fill: #6B7280;"/>
            </VBox>
            
            <Separator prefWidth="400"/>
            
            <!-- Email Field -->
            <TextField fx:id="emailField" promptText="Email" prefWidth="400" style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-radius: 8;"/>
            
            <!-- Password Field -->
            <PasswordField fx:id="passwordField" promptText="Password" prefWidth="400" style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-radius: 8;"/>
            
            <!-- Login Button -->
            <Button fx:id="loginBtn" onAction="#onLogin" prefHeight="50" prefWidth="400" style="-fx-background-color: #8B5CF6; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 8;" text="Login"/>
            
            <!-- Register Link -->
            <HBox alignment="CENTER" spacing="5">
                <Text text="Don't have an account?" style="-fx-fill: #6B7280;"/>
                <Hyperlink fx:id="registerLink" onAction="#onRegisterClick" style="-fx-text-fill: #8B5CF6; -fx-font-weight: bold;" text="Register here"/>
            </HBox>
        </VBox>
    </children>
</VBox>
