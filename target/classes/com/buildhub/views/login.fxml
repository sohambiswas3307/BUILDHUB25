<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.buildhub.javafx.LoginController" prefHeight="600" prefWidth="800">
    <children>
        <!-- Background -->
        <Pane style="-fx-background-color: linear-gradient(to bottom, #4F46E5, #7C3AED);" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"/>
        
        <!-- White Card -->
        <VBox alignment="CENTER" spacing="30" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 4);" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="150" AnchorPane.rightAnchor="150" AnchorPane.topAnchor="50">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40"/>
            </padding>
            
            <!-- Header -->
            <Text text="ðŸ—ï¸ BuildHub" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-fill: #4F46E5;"/>
            <Text text="Welcome Back!" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Text text="Sign in to your account" style="-fx-font-size: 14px; -fx-fill: #6B7280;"/>
            
            <Separator/>
            
            <!-- Email Field -->
            <TextField fx:id="emailField" promptText="Email" prefWidth="400" style="-fx-font-size: 14px;">
                <VBox.margin>
                    <Insets top="10"/>
                </VBox.margin>
            </TextField>
            
            <!-- Password Field -->
            <PasswordField fx:id="passwordField" promptText="Password" prefWidth="400" style="-fx-font-size: 14px;"/>
            
            <!-- Login Button -->
            <Button fx:id="loginBtn" onAction="#onLogin" prefHeight="50" prefWidth="400" style="-fx-background-color: #4F46E5; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;" text="Login"/>
            
            <!-- Register Link -->
            <HBox alignment="CENTER" spacing="5">
                <Text text="Don't have an account?"/>
                <Hyperlink fx:id="registerLink" onAction="#onRegisterClick" style="-fx-text-fill: #4F46E5;" text="Register here"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>

