<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.buildhub.javafx.RegisterController" prefHeight="600" prefWidth="800">
    <children>
        <!-- Background -->
        <Pane style="-fx-background-color: linear-gradient(to bottom, #4F46E5, #7C3AED);" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"/>
        
        <!-- White Card -->
        <ScrollPane fitToWidth="true" prefHeight="550" prefWidth="400" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="25">
            <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 4);">
                <padding>
                    <Insets bottom="30" left="30" right="30" top="30"/>
                </padding>
                
                <!-- Header -->
                <Text text="🏗️ BuildHub" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-fill: #4F46E5;"/>
                <Text text="Create Account" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                
                <!-- Name -->
                <TextField fx:id="nameField" promptText="Full Name" prefWidth="350"/>
                
                <!-- Email -->
                <TextField fx:id="emailField" promptText="Email" prefWidth="350"/>
                
                <!-- Phone -->
                <TextField fx:id="phoneField" promptText="Phone Number" prefWidth="350"/>
                
                <!-- Address -->
                <TextArea fx:id="addressField" prefHeight="80" prefWidth="350" promptText="Address"/>
                
                <!-- Password -->
                <PasswordField fx:id="passwordField" promptText="Password" prefWidth="350"/>
                
                <!-- Confirm Password -->
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" prefWidth="350"/>
                
                <!-- Role Selection -->
                <VBox spacing="10">
                    <Text text="Select Your Role:" style="-fx-font-weight: bold;"/>
                    <RadioButton fx:id="customerRadio" selected="true" text="Customer"/>
                    <RadioButton fx:id="contractorRadio" text="Contractor"/>
                    <RadioButton fx:id="labourRadio" text="Labour"/>
                </VBox>
                
                <!-- Register Button -->
                <Button fx:id="registerBtn" onAction="#onRegister" prefHeight="45" prefWidth="350" style="-fx-background-color: #4F46E5; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;" text="Register"/>
                
                <!-- Login Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Text text="Already have an account?"/>
                    <Hyperlink fx:id="loginLink" onAction="#onLoginClick" style="-fx-text-fill: #4F46E5;" text="Login here"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </children>
</AnchorPane>

