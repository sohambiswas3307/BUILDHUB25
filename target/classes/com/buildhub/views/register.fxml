<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.buildhub.javafx.RegisterController" prefHeight="700" prefWidth="1000">
    <children>
        <!-- Background -->
        <Pane style="-fx-background-color: linear-gradient(to bottom, #E0E7FF 0%, #C7D2FE 100%);" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"/>
        
        <!-- Main Card -->
        <ScrollPane fitToWidth="true" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="250" AnchorPane.rightAnchor="250" AnchorPane.topAnchor="50">
            <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 20, 0, 0, 10);">
                <padding>
                    <Insets bottom="40" left="50" right="50" top="40"/>
                </padding>
                
                <!-- Header -->
                <VBox alignment="CENTER" spacing="10">
                    <Text text="ðŸ—ï¸" style="-fx-font-size: 48px;"/>
                    <Text text="BuildHub" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #1E1B4B;"/>
                    <Text text="Create Your Account" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #1E1B4B;"/>
                </VBox>
                
                <Separator prefWidth="400"/>
                
                <!-- Name -->
                <TextField fx:id="nameField" promptText="Full Name" prefWidth="400" style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-radius: 8;"/>
                
                <!-- Email -->
                <TextField fx:id="emailField" promptText="Email" prefWidth="400" style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-radius: 8;"/>
                
                <!-- Phone -->
                <TextField fx:id="phoneField" promptText="Phone Number" prefWidth="400" style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-radius: 8;"/>
                
                <!-- Address -->
                <TextArea fx:id="addressField" prefHeight="70" prefWidth="400" promptText="Address" style="-fx-background-radius: 8; -fx-border-radius: 8;"/>
                
                <!-- Password -->
                <PasswordField fx:id="passwordField" promptText="Password" prefWidth="400" style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-radius: 8;"/>
                
                <!-- Confirm Password -->
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" prefWidth="400" style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-radius: 8;"/>
                
                <!-- Role Selection -->
                <VBox alignment="CENTER_LEFT" spacing="15" prefWidth="400">
                    <Text text="Select Your Role:" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-fill: #1E1B4B;"/>
                    <RadioButton fx:id="customerRadio" selected="true" text="Customer" style="-fx-font-size: 14px;"/>
                    <RadioButton fx:id="contractorRadio" text="Contractor" style="-fx-font-size: 14px;"/>
                    <RadioButton fx:id="labourRadio" text="Labour" style="-fx-font-size: 14px;"/>
                </VBox>
                
                <!-- Register Button -->
                <Button fx:id="registerBtn" onAction="#onRegister" prefHeight="50" prefWidth="400" style="-fx-background-color: #8B5CF6; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 8;" text="Register"/>
                
                <!-- Login Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Text text="Already have an account?" style="-fx-fill: #6B7280;"/>
                    <Hyperlink fx:id="loginLink" onAction="#onLoginClick" style="-fx-text-fill: #8B5CF6; -fx-font-weight: bold;" text="Login here"/>
                </HBox>
                
                <!-- Back Button -->
                <Button text="â† Back" onAction="#onBack" style="-fx-background-color: transparent; -fx-text-fill: #8B5CF6; -fx-font-weight: bold; -fx-cursor: hand;"/>
            </VBox>
        </ScrollPane>
    </children>
</AnchorPane>
