<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.buildhub.javafx.LandingController" spacing="30">
    
    <padding>
        <Insets top="30" right="50" bottom="30" left="50"/>
    </padding>
    
    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Text text="🏗️ BuildHub" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #4F46E5;" />
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Login" fx:id="loginBtn" onAction="#onLogin" styleClass="btn-primary" />
        <Button text="Register" fx:id="registerBtn" onAction="#onRegister" styleClass="btn-secondary" />
    </HBox>
    
    <!-- Hero Section -->
    <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #E0E7FF; -fx-background-radius: 15; -fx-padding: 40;">
        <Text text="Your One-Stop Platform for Construction Projects" 
              style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-fill: #1E1B4B;" 
              textAlignment="CENTER" wrappingWidth="800"/>
        
        <Text text="Connecting Customers, Contractors, and Labours to build the future, together." 
              style="-fx-font-size: 16px; -fx-fill: #4B5563;" 
              textAlignment="CENTER" wrappingWidth="700"/>
        
        <HBox spacing="15" alignment="CENTER">
            <Button text="Get Started →" fx:id="getStartedBtn" onAction="#onGetStarted" 
                    styleClass="btn-large-primary" />
            <Button text="Learn More" fx:id="learnMoreBtn" onAction="#onLearnMore" 
                    styleClass="btn-large-secondary" />
        </HBox>
    </VBox>
    
    <!-- User Roles Section -->
    <Text text="How BuildHub Works" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #1E1B4B;" />
    
    <HBox spacing="20" alignment="CENTER">
        <!-- Customer Card -->
        <VBox style="-fx-background-color: #DBEAFE; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" alignment="CENTER" prefWidth="250">
            <Text text="👷" style="-fx-font-size: 48px;"/>
            <Text text="Customers" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #1E40AF;"/>
            <Text text="Post projects, hire contractors and labours, track progress and budgets." 
                  style="-fx-font-size: 12px; -fx-fill: #4B5563; -fx-wrap-text: true;" 
                  wrappingWidth="220" textAlignment="CENTER"/>
            <Button text="Join as Customer" onAction="#onJoinCustomer" styleClass="btn-customer"/>
        </VBox>
        
        <!-- Contractor Card -->
        <VBox style="-fx-background-color: #D1FAE5; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" alignment="CENTER" prefWidth="250">
            <Text text="🏗️" style="-fx-font-size: 48px;"/>
            <Text text="Contractors" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #065F46;"/>
            <Text text="Bid on projects, manage teams, showcase your portfolio, gain approvals." 
                  style="-fx-font-size: 12px; -fx-fill: #4B5563; -fx-wrap-text: true;" 
                  wrappingWidth="220" textAlignment="CENTER"/>
            <Button text="Join as Contractor" onAction="#onJoinContractor" styleClass="btn-contractor"/>
        </VBox>
        
        <!-- Labour Card -->
        <VBox style="-fx-background-color: #FEF3C7; -fx-background-radius: 10; -fx-padding: 20;" spacing="10" alignment="CENTER" prefWidth="250">
            <Text text="🛠️" style="-fx-font-size: 48px;"/>
            <Text text="Labours" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #92400E;"/>
            <Text text="Find job opportunities, track work hours, build your reputation and get paid." 
                  style="-fx-font-size: 12px; -fx-fill: #4B5563; -fx-wrap-text: true;" 
                  wrappingWidth="220" textAlignment="CENTER"/>
            <Button text="Join as Labour" onAction="#onJoinLabour" styleClass="btn-labour"/>
        </VBox>
    </HBox>
</VBox>

