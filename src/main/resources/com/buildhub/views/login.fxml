<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.buildhub.javafx.LoginController" prefHeight="700" prefWidth="1000" style="-fx-background-color: white;">
    <children>
        <!-- Header with Back Button -->
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 20;">
            <Button text="â† Back" onAction="#onBack" style="-fx-background-color: transparent; -fx-text-fill: #000000; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;"/>
        </HBox>
        
        <!-- Spacer to push card to center -->
        <Region VBox.vgrow="ALWAYS"/>
        
        <!-- Main Card - Centered and responsive -->
        <HBox alignment="CENTER" VBox.vgrow="NEVER">
            <VBox alignment="CENTER" spacing="25" style="-fx-background-color: white; -fx-background-radius: 0; -fx-border-color: #000000; -fx-border-width: 1; -fx-max-width: 450; -fx-pref-width: 450;">
                <padding>
                    <Insets bottom="50" left="50" right="50" top="50"/>
                </padding>
                
                <!-- Header -->
                <VBox alignment="CENTER" spacing="8">
                    <Text text="ðŸ—ï¸" style="-fx-font-size: 40px;"/>
                    <Text text="BUILDHUB" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #000000;"/>
                    <Text text="Welcome Back!" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: #000000;"/>
                    <Text text="Sign in to your account" style="-fx-font-size: 13px; -fx-fill: #6B7280;"/>
                </VBox>
                
                <Separator prefWidth="350"/>
                
                <!-- Email Field -->
                <TextField fx:id="emailField" promptText="Email" prefWidth="350" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 0; -fx-border-radius: 0; -fx-border-color: #000000;"/>
                
                <!-- Password Field -->
                <PasswordField fx:id="passwordField" promptText="Password" prefWidth="350" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 0; -fx-border-radius: 0; -fx-border-color: #000000;"/>
                
                <!-- Login Button -->
                <Button fx:id="loginBtn" onAction="#onLogin" prefHeight="45" prefWidth="350" style="-fx-background-color: #DC2626; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 0;" text="Login"/>
                
                <!-- Register Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Text text="Don't have an account?" style="-fx-fill: #6B7280;"/>
                    <Hyperlink fx:id="registerLink" onAction="#onRegisterClick" style="-fx-text-fill: #DC2626; -fx-font-weight: bold;" text="Register here"/>
                </HBox>
            </VBox>
        </HBox>
        
        <!-- Bottom spacer -->
        <Region VBox.vgrow="ALWAYS"/>
    </children>
</VBox>
