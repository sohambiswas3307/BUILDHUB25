<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.buildhub.javafx.CustomerDashboardController" prefHeight="800" prefWidth="1200">
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #4F46E5; -fx-padding: 20;">
        <Button text="← Back" onAction="#onBack" style="-fx-background-color: #7C3AED; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 15; -fx-background-radius: 5;"/>
        <Text text="🏗️ BuildHub" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: white;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="newProjectBtn" onAction="#onNewProject" style="-fx-background-color: white; -fx-text-fill: #4F46E5; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 10 20;" text="+ New Project"/>
        <Button fx:id="logoutBtn" onAction="#onLogout" style="-fx-background-color: #7C3AED; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 10 20;" text="Logout"/>
    </HBox>
    
    <!-- Main Content -->
    <HBox prefHeight="780" spacing="20">
        <!-- Left Sidebar -->
        <VBox prefWidth="250" spacing="10" style="-fx-background-color: #F3F4F6; -fx-padding: 20;">
            <Text text="Dashboard" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: #4F46E5;"/>
            <Text text="Project Management" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-fill: #6B7280;"/>
            
            <Separator/>
            
            <Text text="My Profile" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="profileName" text="John Doe"/>
            <Label fx:id="profileEmail" text="john@example.com"/>
            
            <Separator/>
            
            <Text text="Quick Actions" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Button onAction="#onAddItem" text="📦 Add Item" style="-fx-background-color: #10B981; -fx-text-fill: white; -fx-cursor: hand; -fx-pref-width: 200;"/>
            <Button onAction="#onViewReports" text="📊 View Reports" style="-fx-background-color: #3B82F6; -fx-text-fill: white; -fx-cursor: hand; -fx-pref-width: 200;"/>
            <Button onAction="#onDeleteProject" text="🗑️ Delete Project" style="-fx-background-color: #EF4444; -fx-text-fill: white; -fx-cursor: hand; -fx-pref-width: 200;"/>
        </VBox>
        
        <!-- Main Content Area -->
        <VBox spacing="20" VBox.vgrow="ALWAYS">
            <!-- Welcome Section -->
            <VBox spacing="5" style="-fx-background-color: #EEF2FF; -fx-padding: 20; -fx-background-radius: 10;">
                <Text text="Welcome back, Customer!" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #1E1B4B;"/>
                <Text text="Manage your construction projects efficiently" style="-fx-font-size: 14px; -fx-fill: #6B7280;"/>
            </VBox>
            
            <!-- Projects Section -->
            <VBox spacing="10">
                <HBox alignment="CENTER_LEFT">
                    <Text text="My Projects" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>
                
                <!-- Project Cards -->
                <TableView fx:id="projectsTable" prefHeight="400">
                    <columns>
                        <TableColumn prefWidth="150" text="Project Name"/>
                        <TableColumn prefWidth="200" text="Location"/>
                        <TableColumn prefWidth="100" text="Budget"/>
                        <TableColumn prefWidth="100" text="Status"/>
                        <TableColumn prefWidth="150" text="Actions"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </HBox>
</VBox>

