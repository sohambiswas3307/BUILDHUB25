<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.buildhub.javafx.CustomerDashboardController" prefHeight="800" prefWidth="1400" style="-fx-background-color: #F8F9FA; -fx-padding: 0;">
    
    <!-- Main Container with Shadow -->
    <VBox prefHeight="800" prefWidth="1400" style="-fx-background-color: #F8F9FA; -fx-border-color: #E5E7EB; -fx-border-width: 1; -fx-border-radius: 12; -fx-spacing: 0;" VBox.vgrow="ALWAYS">
        
        <!-- Header Bar -->
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-padding: 20;">
            <Button text="← Back" onAction="#onBack" style="-fx-background-color: #DC2626; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="userNameLabel" text="Customer" style="-fx-font-size: 14px; -fx-text-fill: #000000; -fx-font-weight: bold;"/>
            <Button fx:id="logoutBtn" onAction="#onLogout" style="-fx-background-color: #DC2626; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold;" text="Logout"/>
        </HBox>
        
        <!-- Body -->
        <HBox spacing="0" prefHeight="760" VBox.vgrow="ALWAYS">
            
            <!-- White Left Sidebar -->
            <VBox prefWidth="260" style="-fx-background-color: #F3F4F6; -fx-border-color: #E5E7EB; -fx-border-width: 0 1 0 0; -fx-padding: 30;" spacing="0">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Text text="🏗️" style="-fx-font-size: 24px;"/>
                    <Text text="BUILDNET" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: #000000;"/>
                </HBox>
                
                <Region prefHeight="30"/>
                
                <Text text="NAVIGATION" style="-fx-font-size: 11px; -fx-fill: #6B7280; -fx-font-weight: bold; -fx-padding: 10 0 10 0;"/>
                
                <VBox spacing="8">
                    <Button fx:id="dashboardBtn" onAction="#navigateToDashboard" text="📊 Dashboard" style="-fx-background-color: #DC2626; -fx-text-fill: white; -fx-padding: 12; -fx-cursor: hand; -fx-alignment: CENTER_LEFT; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8;"/>
                    
                    <Button fx:id="projectsBtn" onAction="#navigateToProjects" text="📁 My Projects" style="-fx-background-color: transparent; -fx-text-fill: #000000; -fx-padding: 12; -fx-cursor: hand; -fx-alignment: CENTER_LEFT; -fx-font-size: 14px;"/>
                    
                    <Button fx:id="newProjectBtn" onAction="#onNewProject" text="➕ New Project" style="-fx-background-color: transparent; -fx-text-fill: #000000; -fx-padding: 12; -fx-cursor: hand; -fx-alignment: CENTER_LEFT; -fx-font-size: 14px;"/>
                    
                    <Button fx:id="settingsBtn" onAction="#navigateToSettings" text="⚙️ Settings" style="-fx-background-color: transparent; -fx-text-fill: #000000; -fx-padding: 12; -fx-cursor: hand; -fx-alignment: CENTER_LEFT; -fx-font-size: 14px;"/>
                </VBox>
                
                <Region VBox.vgrow="ALWAYS"/>
                
                <Text text="WORKSPACE" style="-fx-font-size: 11px; -fx-fill: #6B7280; -fx-font-weight: bold; -fx-padding: 20 0 10 0;"/>
                
                <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding: 12;">
                    <Label text="🔧" style="-fx-font-size: 18px;"/>
                    <Text text="BuildNET Team" style="-fx-font-size: 14px; -fx-fill: #000000;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="▼" style="-fx-font-size: 10px; -fx-text-fill: #000000;"/>
                </HBox>
            </VBox>
            
            <!-- White Main Content Area -->
            <VBox spacing="20" VBox.vgrow="ALWAYS" style="-fx-background-color: #F8F9FA; -fx-padding: 30;">
                <!-- Welcome Section -->
                <VBox spacing="5">
                    <Text text="Welcome back, Customer!" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #000000;"/>
                    <Text text="Manage your construction projects efficiently" style="-fx-font-size: 14px; -fx-fill: #6B7280;"/>
                </VBox>
                
                <!-- Projects Section -->
                <VBox spacing="10" VBox.vgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT">
                        <Text text="My Projects" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: #000000;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                    </HBox>
                    
                    <!-- Project List -->
                    <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-border-color: transparent;">
                        <VBox fx:id="projectsList" spacing="10"/>
                    </ScrollPane>
                </VBox>
            </VBox>
        </HBox>
    </VBox>
</VBox>
