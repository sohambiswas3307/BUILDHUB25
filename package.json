{
  "name": "buildhub",
  "version": "1.0.0",
  "description": "BuildHub - A one-stop platform connecting Customers, Contractors, and Labours",
  "main": "server/index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:api": "nodemon server/index.js",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build-and-start": "npm run build && npm start",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": ["construction", "labour", "contractor", "project-management"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "better-sqlite3": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}

